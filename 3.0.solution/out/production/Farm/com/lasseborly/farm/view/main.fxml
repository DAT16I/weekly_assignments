<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lasseborly.farm.view.Controller">
      <TextArea fx:id="txtChat" wrapText="true" editable="false" maxHeight="1.7976931348623157E308" focusTraversable="false" maxWidth="1.7976931348623157E308" minHeight="400.0" />
      <HBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
            <TextField styleClass="square" fx:id="txtInput" HBox.hgrow="ALWAYS" />
            <Button styleClass="square" fx:id="btnSend" onAction="#clickSend" minWidth="-Infinity" mnemonicParsing="false" prefHeight="27.0" prefWidth="80.0" text="Send" />
      </HBox>
</VBox>
